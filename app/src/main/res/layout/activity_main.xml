<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/agg" />

    <Button
        android:id="@+id/button1"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="99dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/my_background"
        android:textStyle="bold"
        android:text="WINE"
        android:textSize="20dp"
        android:textColor="#000000" />

   <Button
        android:id="@+id/button2"
    android:layout_width="110dp"
    android:layout_height="70dp"
    android:layout_alignParentEnd="true"
    android:layout_alignTop="@+id/button1"
    android:layout_marginEnd="42dp"
       android:textStyle="bold"
    android:text="WHISKEY"
       android:textSize="20dp"
       android:layout_marginRight="60dp"
       android:textColor="#000000"
       android:background="@drawable/my_background"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:textSize="20dp"
        android:layout_alignStart="@+id/button2"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/button2"
        android:background="@drawable/my_background"
        android:text="CIDER"
        android:textColor="#000000" />

    <Button
        android:id="@+id/button4"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/button1"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/button1"
        android:textStyle="bold"
        android:background="@drawable/my_background"
        android:textSize="20dp"
        android:text="BEER"
        android:textColor="#000000" />

    <Button
        android:id="@+id/button5"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/button3"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/button3"
        android:background="@drawable/my_background"
        android:text="ALCOPOP"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <Button
        android:id="@+id/button6"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/button4"
        android:layout_alignStart="@+id/button1"
        android:textSize="20dp"
        android:background="@drawable/my_background"
        android:text="LAGER"
        android:textStyle="bold"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:textColor="#6F0910"
        android:textStyle="bold"
        android:background="#4BEED8"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:textSize="45sp"
        android:text="Alcohol Unit: 0"
        />

    <Button
        android:id="@+id/buttonShowDialog"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="102dp"
        android:background="@drawable/background2"
        android:text="Login"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button7"
        android:layout_width="48dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text"
        android:background="@drawable/my_background"
        android:text="R" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="188dp"
        android:layout_height="32dp"
        android:layout_alignTop="@+id/buttonShowDialog"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="12dp"
        android:layout_toStartOf="@+id/buttonShowDialog"
        android:text="FOR FURTHER DETAILS:"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="122dp"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText2"
        android:layout_alignParentStart="true"
        android:text="Amount(ml): "
        android:textColor="#FFFFFF"
        android:textSize="30dp"/>


</RelativeLayout>